<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @export } %>

<% content_for :page_title do %>
  <%= Spree.t(:new_export, scope: :exporter_core) %>
<% end %>

<%= form_for [:admin, @export], :html => { :multipart => true } do |f| %>
  <%= f.hidden_field :exporter, value: @exporter.key %>
  <%= f.hidden_field :state, value: :created %>

  <fieldset class="new_export">

    <%= render partial: "spree/admin/exports/#{@exporter.key}_filters", locals: { f: f } if lookup_context.exists?("#{@exporter.key}_filters", ['spree/admin/exports'], true) %>

    <div class="form-actions" data-hook="buttons">
      <%= button Spree.t(:submit_text, scope: :exporter_core), 'ok', 'submit', {class: 'btn-success'} %>
      <span class="or"><%= Spree.t(:or) %></span>
      <%= button_link_to Spree.t('actions.cancel'), spree.admin_exports_path(exporter_id: @exporter.key), :icon => 'remove' %>
    </div>

  </fieldset>
<% end %>
